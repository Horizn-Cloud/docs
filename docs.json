{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Hrizn API Documentation",
  "colors": {
    "primary": "#566BA1",
    "light": "#7B8EC4",
    "dark": "#3D4F7A"
  },
  "favicon": "/favicon.svg",
  "api": {
    "playground": {
      "display": "interactive",
      "proxy": true
    },
    "examples": {
      "languages": ["curl", "python", "javascript", "typescript", "php"],
      "defaults": "required",
      "prefill": true
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "authentication",
              "rate-limiting",
              "webhooks"
            ]
          },
          {
            "group": "Concepts",
            "pages": [
              "concepts/pagination",
              "concepts/errors",
              "concepts/idempotency"
            ]
          },
          {
            "group": "Scopes",
            "pages": [
              "scopes/overview",
              "scopes/ideaclouds-read",
              "scopes/ideaclouds-write",
              "scopes/articles-read",
              "scopes/articles-write",
              "scopes/compliance-write",
              "scopes/content-tools-write",
              "scopes/inventory-read",
              "scopes/inventory-write",
              "scopes/webhooks-read",
              "scopes/webhooks-write",
              "scopes/site-read"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "openapi.yaml",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/overview"
            ]
          },
          {
            "group": "IdeaClouds",
            "pages": [
              "api-reference/ideaclouds/create",
              "api-reference/ideaclouds/create-batch",
              "api-reference/ideaclouds/list",
              "api-reference/ideaclouds/get",
              "api-reference/ideaclouds/get-questions"
            ]
          },
          {
            "group": "Articles",
            "pages": [
              "api-reference/articles/create",
              "api-reference/articles/create-batch",
              "api-reference/articles/list",
              "api-reference/articles/get",
              "api-reference/articles/get-html",
              "api-reference/articles/get-components",
              "api-reference/articles/generate"
            ]
          },
          {
            "group": "Compliance",
            "pages": [
              "api-reference/compliance/trigger",
              "api-reference/compliance/get"
            ]
          },
          {
            "group": "Content Tools",
            "pages": [
              "api-reference/content-tools/generate"
            ]
          },
          {
            "group": "Inventory",
            "pages": [
              "api-reference/inventory/list",
              "api-reference/inventory/get-vehicle",
              "api-reference/inventory/get-description",
              "api-reference/inventory/generate-description",
              "api-reference/inventory/generate-description-batch",
              "api-reference/inventory/get-feed",
              "api-reference/inventory/get-stats"
            ]
          },
          {
            "group": "Site",
            "pages": [
              "api-reference/site/get",
              "api-reference/site/get-categories",
              "api-reference/site/get-brand-voices",
              "api-reference/site/get-elements",
              "api-reference/site/get-article-types"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "api-reference/webhooks/create",
              "api-reference/webhooks/list",
              "api-reference/webhooks/update",
              "api-reference/webhooks/delete",
              "api-reference/webhooks/test",
              "api-reference/webhooks/deliveries"
            ]
          },
          {
            "group": "Reference",
