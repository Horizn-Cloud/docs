    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://app.hrizn.io",
          "icon": "gauge-high"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@hrizn.io",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@hrizn.io"
      }
    ],
    "primary": {
      "type": "button",
